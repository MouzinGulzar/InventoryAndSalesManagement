extends ./layouts/adminLayout.pug

block content 
    .container
        .d-flex.justify-content-between.gap-3.align-items-center.flex-wrap.mt-5.mb-4
            a(href="/suppliers")
                button.btn.btn-primary.btn-icon
                    ion-icon(name="arrow-back")
                    span.ms-2 Back to Suppliers

        h2.mb-4 Add a Supplier
        form(action=`/suppliers/add-supplier`, method='POST')
            .d-flex.justify-content-between.gap-3.flex-wrap.mb-3
                .flex-fill
                    label.form-label(for='exampleText2') Name
                    input#exampleText2.form-control(type='text' name="name" autocomplete="off" required)
                .flex-fill
                    label.form-label(for='exampleText3') Contact
                    input#exampleText3.form-control(type='text' name="contact" autocomplete="off" required)
                .flex-fill
                    label.form-label(for='exampleText3') Email
                    input#exampleText3.form-control(type='email' name="email" autocomplete="off")
            .d-flex.justify-content-between.gap-3.mb-3
                .flex-fill
                    label.form-label(for='exampleText2') Address
                    input#exampleText2.form-control(type='text' name="address" autocomplete="off" required)
                .flex-fill
                    label.form-label(for='exampleText2') TSR
                    select#exampleText2.form-select(name='tsr' required)
                        option(disabled selected) Select TSR
                        option(value='1') 1
                        option(value='2') 2
                        option(value='3') 3
                        option(value='4') 4
                        option(value='5') 5
            .d-flex.justify-content-between.gap-3.mb-3
                .flex-fill
                    label.form-label(for='exampleText3') Note (optional)
                    textarea#exampleText3.form-control(type='text' name="note" rows="3")

            .d-grid.mt-5
                button.btn.btn-primary(type='submit') Add